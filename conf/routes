# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.sessionRedirect()
GET		/listUser					controllers.Application.listUser()
GET		/index						controllers.Application.index()
GET		/register					controllers.Application.register()
GET		/login						controllers.Application.login()
GET		/home/:user					controllers.Application.home(user: String)
GET		/error/:error				controllers.Application.error(error: String)

POST	/users						controllers.Application.addUser()
POST	/validateLogin				controllers.Application.validateLogin()

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET  /assets/*file        controllers.Assets.at(path="/public", file)